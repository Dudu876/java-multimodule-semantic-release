{
  "branches": [{"name": "main"}],
  "repositoryUrl": "https://github.com/Dudu876/java-multimodule-semantic-release",
  "tagFormat": "${version}",
  "debug": "true",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Semantic Versioning Changelog"
      }
    ],
    [
        "@semantic-release/exec",
        {
          "prepareCmd": "./mvnw -B versions:set-property -Dproperty=revision -DgenerateBackupPoms=false -DnewVersion=${nextRelease.version}",
          "publishCmd": "./mvnw -B -DskipTests -Drevision=${nextRelease.version} -Ddocker.push.registry=$REGISTRY/$GITHUB_REPOSITORY deploy"
        }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["pom.xml", "CHANGELOG.md"]
      }
    ],
    "@semantic-release/github"
  ]
}